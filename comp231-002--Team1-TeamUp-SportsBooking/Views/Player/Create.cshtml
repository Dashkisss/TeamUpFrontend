@model comp231_002__Team1_TeamUp_SportsBooking.Models.Booking

@{
    ViewData["Title"] = "Book a court";
}

<main class="main-container">

    <section class="auth-card booking-card">

        <h1 class="auth-title mb-3">Book a court</h1>
        <p class="auth-subtitle mb-4">
            Select a player, court, date and timeslot for your reservation.
        </p>

        <form asp-action="Create" method="post">

            <!-- Player dropdown -->
            <div class="form-group mb-3">
                <label class="form-label">Player</label>
                <select asp-for="PlayerID" class="form-control">
                    <option value="">-- Select player --</option>
                    @if (ViewBag.Players != null)
                    {
                        foreach (var p in ViewBag.Players)
                        {
                            <option value="@p.PlayerID">@p.Name (@p.SportPreference)</option>
                        }
                    }
                </select>
            </div>

            <!-- Court dropdown -->
            <div class="form-group mb-3">
                <label class="form-label">Court</label>
                <select asp-for="CourtID" class="form-control">
                    <option value="">-- Select court --</option>
                    @if (ViewBag.Courts != null)
                    {
                        foreach (var c in ViewBag.Courts)
                        {
                            <option value="@c.CourtID">@c.Location (@c.SurfaceType)</option>
                        }
                    }
                </select>
            </div>

            <!-- Booking date -->
            <div class="form-group mb-3">
                <label asp-for="BookingDate" class="form-label"></label>
                <input asp-for="BookingDate" type="date" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <!-- Time slot -->
            <div class="form-group mb-4">
                <label asp-for="TimeSlot" class="form-label"></label>
                <input asp-for="TimeSlot" class="form-control" placeholder="e.g. 18:00 - 19:00" />
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-teamup w-100">
                Confirm booking
            </button>

        </form>
    </section>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
