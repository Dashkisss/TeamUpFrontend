@using Microsoft.AspNetCore.Identity
@using comp231_002__Team1_TeamUp_SportsBooking.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeamUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    TeamUp
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Courts" asp-action="Index">Courts</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="MyGames">My Games</a>
                        </li>

                        <!-- New items to match teammate's navbar -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">Profile</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Watch" asp-action="Index">Watch</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Team" asp-action="Index">Team</a>
                        </li>

                    </ul>

                    <!-- Right menu (Login / Register / Logout) -->
                    <ul class="navbar-nav ms-auto">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Sign Up</a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @(DateTime.Now.Year) - TeamUp Sports Booking
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
