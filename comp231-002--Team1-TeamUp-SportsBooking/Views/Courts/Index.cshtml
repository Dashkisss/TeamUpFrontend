@using comp231_002__Team1_TeamUp_SportsBooking.Models
@model IEnumerable<Court>

@{
    ViewData["Title"] = "Courts";
}

<h1 class="mb-3">Find a court</h1>

@if (Model == null || !Model.Any())
{
    <p>No courts available yet.</p>
    <p>Ask admin to add courts to the system.</p>
}
else
{
    <div class="row">
        @foreach (var court in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@court.Location</h5>
                        <p class="card-text mb-2">
                            Surface: @court.SurfaceType <br />
                            Status: @(court.IsAvailable ? "Available" : "Unavailable")
                        </p>

                        <div class="mt-auto">
                            <a asp-action="Details"
                               asp-route-id="@court.CourtID"
                               class="btn btn-outline-secondary btn-sm me-2">
                                Details
                            </a>

                            @if (court.IsAvailable)
                            {
                                <a asp-action="Book"
                                   asp-route-id="@court.CourtID"
                                   class="btn btn-primary btn-sm">
                                    Book this court
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

