@using comp231_002__Team1_TeamUp_SportsBooking.Models
@model Booking

@{
    ViewData["Title"] = "Book a court";
    var courtId = ViewBag.CourtId;
    var courtName = ViewBag.CourtName as string;
}

<main class="main-container">

    <section class="auth-card booking-card">

        <h1 class="auth-title mb-3">Book this court</h1>

        @if (!string.IsNullOrEmpty(courtName))
        {
            <p class="auth-subtitle mb-1">
                Court: <strong>@courtName</strong>
            </p>
        }

        <p class="auth-subtitle mb-4">
            Select a date and time slot for your reservation.
        </p>

        <form asp-controller="Courts"
              asp-action="Book"
              method="post">

            @Html.AntiForgeryToken()

            @* CourtID hidden *@
            <input type="hidden" asp-for="CourtID" value="@courtId" />

            <div class="form-group mb-3">
                <label asp-for="BookingDate" class="form-label-teamup">Date</label>
                <input asp-for="BookingDate"
                       type="date"
                       class="form-control-teamup"
                       required />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TimeSlot" class="form-label-teamup">Time slot</label>

                <select asp-for="TimeSlot"
                        class="form-control-teamup"
                        required>
                    <option value="">Select a slot</option>
                    <option>08:00 - 09:00</option>
                    <option>09:00 - 10:00</option>
                    <option>16:00 - 17:00</option>
                    <option>18:00 - 19:00</option>
                    <option>19:00 - 20:00</option>
                </select>
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>

         

            <button type="submit" class="btn-primary-teamup w-100 mb-3">
                Confirm booking
            </button>

            <a asp-controller="Courts" asp-action="Index" class="btn-secondary-teamup w-100">
                Cancel
            </a>

        </form>

    </section>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
